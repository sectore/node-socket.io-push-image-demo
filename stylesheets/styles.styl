@import './mixin'


body
html
p
  padding: 0
  margin: 0


body
  font: 1.2em "Helvetica Neue", Helvetica, Arial, sans-serif
  color: #888
  font-weight: normal
  background-color: #F2F2F2

::-moz-selection{ background: #000; color:#fff; text-shadow: none; }
::selection { background:#000; color:#fff; text-shadow: none; }

a
  text-decoration: underline
  color: #888
  &:hover
    color: #6495ed


.content
	width: 500px
	margin: 0 auto
	padding: 1em 0
	text-align: center
	box-shadow(0 2px 6px 0)
	border-radius(15px)
	background: #FFF

	ol
		padding: 0 2em
		margin: 0

	ol
		li
			text-align: left
			font-size: .8em

	p
    	font-size: .8em
    	padding: .5em

header
footer
.content
    width: 500px
    margin: 0 auto

ul
	margin: 0
	padding: 0
	list-style:none
	list-style-image: none

li
	padding: 0
	margin: 0


header
	padding: 2em 0

	h1
    	font-size: 2.5em
    	padding: 0
    	margin: 0
	h2
    	font-size: .9em
    	padding: 0
    	margin: 0
    	font-weight: normal


footer p
    font-size: .8em
    padding-top: .5em
    padding-bottom: 50px


header
header a
footer
footer a
    text-shadow: #FFF 1px 1px 1px
    text-align: center